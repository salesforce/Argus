<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>
    <groupId>com.salesforce.argus</groupId>
    <artifactId>argus-kafkaconsumer</artifactId>
    <version>2.0-SNAPSHOT</version>
    <distributionManagement>
        <repository>
            <id>nexus</id>
            <url>
                https://nexus.soma.salesforce.com/nexus/content/repositories/releases/
            </url>
        </repository>
    </distributionManagement>
    <pluginRepositories>
        <pluginRepository>
            <releases>
                <updatePolicy>never</updatePolicy>
            </releases>
            <snapshots>
                <enabled>false</enabled>
            </snapshots>
            <id>project</id>
            <name>Project Repository</name>
            <url>file://${project.basedir}/repo</url>
        </pluginRepository>
    </pluginRepositories>
    <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>rpm-maven-plugin</artifactId>
        <version>2.1.4</version>
        <executions>
          <execution>
            <id>generate-rpm</id>
            <goals>
              <goal>rpm</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
        <group>Application/Collectors</group>
        <mappings>
            <mapping>
              <directory>/home/sfdc/argus/kafkaconsumer/</directory>
              <filemode>755</filemode>
              <username>sfdc</username>
              <groupname>sfdc</groupname>
              <sources>
                <source>
                   <location>../Miscellaneous/client/startKafkaConsumer.sh</location>
                </source>
              </sources>
            </mapping>
            <mapping>
              <directory>/home/sfdc/argus/kafkaconsumer/lib/</directory>
              <filemode>755</filemode>
              <username>sfdc</username>
              <groupname>sfdc</groupname>
              <sources>
                <source>
                   <location>dist/arguskafkaconsumer.jar</location> 
                </source>
              </sources>
            </mapping>
            <mapping>
                <directory>/home/sfdc/argus/kafkaconsumer/config/</directory>
                <filemode>755</filemode>
                <username>sfdc</username>
                <groupname>sfdc</groupname>
                <sources>
                  <source>
                    <location>config</location>
                  </source>
                </sources>
             </mapping>
            <mapping>
                <directory>/home/sfdc/argus/kafkaconsumer/lib/</directory>
                <filemode>755</filemode>
                <username>sfdc</username>
                <groupname>sfdc</groupname>
                <sources>
                  <source>
                    <location>lib</location>
                  </source>
                </sources>
             </mapping>
          </mappings>
          <preinstallScriptlet>
              <script>
                echo "shutting down kafkaconsumer"
                cd /home/argus/argus/kafkaconsumer/
                 
              </script>
          </preinstallScriptlet>
            <postinstallScriptlet>
              <script>
               echo "starting kafkaconsumer"
                cd /home/argus/argus/kafkaconsumer/
              nohup ./startKafkaConsumer.sh &#38;
	      </script>
            </postinstallScriptlet>
        </configuration>
        </plugin>

        </plugins>
    </build>
    <licenses>
        <license>
            <name>Proprietary and confidential</name>
            <url>https://www.salesforce.com/company/legal/</url>
        </license>
    </licenses>
    <properties>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
        <maven.compiler.source>1.7</maven.compiler.source>
        <maven.compiler.target>1.7</maven.compiler.target>
    </properties>
    <description>Web Services for the Argus Production Monitoring Tool.</description>
    <url>https://sites.google.com/a/salesforce.com/argus/</url>
    <scm>
        <connection>scm:git:git://git.soma.salesforce.com/ArgusMonitoring/ArgusWebServices.git</connection>
        <developerConnection>scm:git:git://git.soma.salesforce.com/ArgusMonitoring/ArgusWebServices.git</developerConnection>
        <url>https://git.soma.salesforce.com/ArgusMonitoring/ArgusWebServices.git</url>
    </scm>
    <ciManagement>
        <system>Jenkins</system>
        <url>http://perfeng-tools2-5-sfm.ops.sfdc.net:8081/jenkins/view/Argus%202.0/job/Build%20ArgusWebServices/</url>
    </ciManagement>
    <issueManagement>
        <system>GUS</system>
        <url>https://gus.my.salesforce.com/a07?fcf=00BB00000015Dxh</url>
    </issueManagement>
    <developers>
        <developer>
            <name>Argus Developers</name>
            <organization>Argus-Dev</organization>
            <organizationUrl>https://groups.google.com/a/salesforce.com/forum/?hl=en#!forum/argus-dev</organizationUrl>
        </developer>
    </developers>
    <name>ArgusKafkaConsumer</name>
</project>
