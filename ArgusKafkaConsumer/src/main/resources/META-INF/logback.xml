<?xml version="1.0" encoding="UTF-8"?>
<configuration debug="false">

    <contextName>AKC</contextName>

    <appender name="ARGUS-FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">
        <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">
            <fileNamePattern>${akc.logdir:-./logs}/${log.file.name:-akc}.%d{yyyy-MM-dd}.log</fileNamePattern>
            <maxHistory>7</maxHistory>
        </rollingPolicy>
        <file>${akc.logdir:-./logs}/${log.file.name:-akc}.log</file>
        <append>true</append>
        <encoder>
            <pattern>[ %cn | %d{yyyy-MM-dd HH:mm:ss.SSS} | %thread | %class{36} | %level ] %msg%n%ex</pattern>
        </encoder>
    </appender>

    <logger name="com.salesforce.perfeng.akc" additivity="false" level="${system.property.log.level:-INFO}">
        <appender-ref ref="ARGUS-FILE"/>
    </logger>

    <logger name="com.salesforce.quota" additivity="false" level="${system.property.log.level:-INFO}">
        <appender-ref ref="ARGUS-FILE"/>
    </logger>

    <root level="TRACE">
        <appender-ref ref="ARGUS-FILE"/>
    </root>

</configuration>
